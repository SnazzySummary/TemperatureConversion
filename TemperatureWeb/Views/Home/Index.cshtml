@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">A00817290 Robert Roe</h1>

    <form asp-controller="Home" asp-action="Submit">
        <label for="from">FROM</label>
        <select name="from" id="from">
            <option value="Fahrenheit">Fahrenheit</option>
            <option selected=true value="Celsius">Celsius</option>
            <option value="Kelvin">Kelvin</option>
        </select>
        <input type="number" name="inputTemp" id="inputTemp" value=@ViewData["inputTemp"]>
        <input type="submit" value="Convert">
        <br><br>
        <label for="to">TO</label>
        <select name="to" id="to">
            <option value="Fahrenheit">Fahrenheit</option>
            <option value="Celsius">Celsius</option>
            <option value="Kelvin">Kelvin</option>
        </select>
        <input type="number" id="outputTemp" value=@ViewData["outputTemp"] readonly>
    </form>
    <br><br><br><br>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
